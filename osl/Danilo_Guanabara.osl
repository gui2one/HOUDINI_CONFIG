shader shapes( 
    output color clr = 1.0 
){
	vector c;
    float t = time * 0.01;
	float l,z=t;
	for(int i=0;i<3;i++) {
		vector uv,p=vector(u,v,0.0);
		uv=p;
		p-=.5;
		p.x*=1.0;
		z+=.07;
		l=length(p);
		uv+=p/l*(sin(z)+1.)*abs(sin(l*9.-z-z));
		c[i]=.01/length(mod(uv,1.)-.5);
	}
	clr=vector(c/l);
}